{{#extends "base"}}
{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Cost</th>
            <th>Strength</th>
            <th>Volume</th>
            <th>Description</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.age}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.strength}}
            </td>
            <td>
                {{this.volume}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>

        </tr>
        {{/each}}
    </tbody>

</table>
{{/block}}

{{/extends}}