{{#extends "base"}}
{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Name</th>
            <th>Distillery</th>
            <th>Country</th>
            <th>Region</th>
            <th>Category</th>
            <th>Age</th>
            <th>Cost</th>
            <th>Strength</th>
            <th>Volume</th>
            <th>Description</th>
            <th>Package</th>
            <th>Stock</th>
            <th>Flavor Profile</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.brand.brand_name}}
            </td>
             <td>
                {{this.name}}
            </td>
            <td>
                {{this.distillery.name}}
            </td>
            <td>
                {{this.country.country}}
            </td>
            <td>
                {{this.region.region}}
            </td>
            <td>
                {{this.category.name}}
            </td>
            <td>
                {{this.age}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.strength}}
            </td>
            <td>
                {{this.volume}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.package.description}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                {{#each flavor_profiles}}
                   <span class="badge bg-primary"> {{name}}</span>
                {{/each}}
            </td>
            <td>
                {{#if image_url}}
                    <img src="{{image_url}}" class="img-fluid"/>
                {{/if}}
            </td>
            <td>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>

        </tr>
        {{/each}}
    </tbody>

</table>
{{/block}}

{{/extends}}